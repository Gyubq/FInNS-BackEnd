<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.finns.post.mapper.PostMapper">

    <!-- 게시물 ID로 게시물 선택 -->
    <select id="selectPostById" parameterType="long" resultType="com.finns.post.dto.PostDTO">
        SELECT *
        FROM post_table  <!-- 실제 게시물 테이블 이름으로 바꾸세요 -->
        WHERE post_id = #{id}
    </select>

    <!-- 게시물 수정 -->
    <update id="updatePost" parameterType="com.finns.post.dto.PostDTO">
        UPDATE post_table  <!-- 실제 게시물 테이블 이름으로 바꾸세요 -->
        SET category = #{category},
        public_scope = #{publicScope},
        image_url = #{imageUrl}
        WHERE post_id = #{id}
    </update>
</mapper>
