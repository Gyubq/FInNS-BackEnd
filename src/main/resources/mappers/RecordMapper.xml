<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.finns.record.mapper.RecordMapper">

    <!-- 거래내역 ID로 거래내역 선택 -->
    <select id="selectRecordById" parameterType="long" resultType="com.finns.record.dto.RecordDTO">
        SELECT *
        FROM record_feed
        WHERE record_no = #{id}
    </select>

    <!-- 거래내역 수정 -->
    <update id="updateRecord" parameterType="com.finns.record.dto.RecordDTO">
        UPDATE record_feed
        SET category = #{category},
            public_status = #{publicStatus},
            memo = #{memo}
        WHERE record_no = #{id}
    </update>
</mapper>
