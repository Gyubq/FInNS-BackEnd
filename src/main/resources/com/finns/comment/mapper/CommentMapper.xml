<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.finns.comment.mapper.CommentMapper">

    <!-- 소비내역에 있는 댓글 리스트 조회   -->
    <select id="getCommentByUser" resultType="com.finns.comment.dto.CommentDTO">
        select * from comment
            where post_no = #{post_no}
    </select>
</mapper>
